<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<%= devise_error_messages! %>
		<div class="panel panel-primary">
			<div class="panel-heading">
				<h2 class="panel-title">Sign up</h2>
			</div>

			<div class="panel-body">
				<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
					<div class="form-group">
						<div><%= f.label :first_name %>
							<%= f.text_field :first_name, autofocus: true, class: "form-control" %></div>

						<div><%= f.label :last_name %>
							<%= f.text_field :last_name, class: "form-control" %></div>

						<div><%= f.label :email %>
							<%= f.email_field :email, class: "form-control" %></div>

						<div><%= f.label :password %>
							<%= f.password_field :password, autocomplete: "off", class: "form-control" %></div>

						<div><%= f.label :password_confirmation %>
							<%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %></div>

						<div><%= f.label :currency %>
							<%= f.select :currency_id, Currency.all.collect {|x| [x, x.id]}, {}, class: "form-control" %></div>
					</div>
					<div><%= f.submit "Sign up", class: "btn btn-primary" %></div>
				<% end %>
			</div>
		</div>
	</div>
</div>
