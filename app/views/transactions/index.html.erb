<h1>Listing transactions</h1>

<table>
  <thead>
    <tr>
      <th>Account</th>
      <th>Category</th>
      <th>Post recorded transaction</th>
      <th>Commentary</th>
      <th>Type</th>
      <th>Amount</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.account %></td>
        <td><%= transaction.category %></td>
        <td><%= transaction.post_recorded_transaction %></td>
        <td><%= transaction.commentary %></td>
        <td><%= transaction.type %></td>
        <td><%= transaction.amount %></td>
        <td><%= transaction.date %></td>
        <td><%= link_to 'Show', transaction %></td>
        <td><%= link_to 'Edit', edit_transaction_path(transaction) %></td>
        <td><%= link_to 'Destroy', transaction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Transaction', new_transaction_path %>
